{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "title": "Landing Zone definition file schema",
  "description": "The configuration file used to define a Landing Zone in Climpr",
  "required": [
    "organization",
    "repoName"
  ],
  "additionalProperties": false,
  "properties": {
    "$schema": {
      "type": "string",
      "format": "uri-reference"
    },
    "decommissioned": {
      "type": "boolean",
      "description": "Setting this to true will decommission the Landing Zone, including any environments or Azure subscriptions."
    },
    "organization": {
      "type": "string"
    },
    "repoName": {
      "type": "string"
    },
    "repoDescription": {
      "type": "string"
    },
    "repoTemplate": {
      "type": "string"
    },
    "disableWorkloadRepoTemplateSync": {
      "type": "boolean",
      "default": false
    },
    "repoSource": {
      "$ref": "#/$defs/repoSource"
    },
    "access": {
      "$ref": "github-api.json#/$defs/access"
    },
    "branchProtection": {
      "$ref": "github-api.json#/$defs/branchProtection"
    },
    "codeOwners": {
      "$ref": "github-api.json#/$defs/codeOwners"
    },
    "environments": {
      "type": "array",
      "additionalProperties": false,
      "items": {
        "type": "object",
        "required": [
          "name"
        ],
        "additionalProperties": false,
        "properties": {
          "name": {
            "type": "string"
          },
          "decommissioned": {
            "type": "boolean",
            "description": "Setting this to true will decommission the environment."
          },
          "runProtection": {
            "$ref": "github-api.json#/$defs/runProtection"
          },
          "branchPolicyPatterns": {
            "$ref": "github-api.json#/$defs/branchPolicyPatterns"
          },
          "azure": {
            "type": "object",
            "oneOf": [
              {
                "required": [
                  "archetype",
                  "subscriptionName",
                  "parentManagementGroupId",
                  "billingProfileDisplayName",
                  "invoiceSectionDisplayName"
                ],
                "additionalProperties": false,
                "properties": {
                  "decommissioned": {
                    "$ref": "#/$defs/azure/decommissioned"
                  },
                  "archetype": {
                    "$ref": "#/$defs/azure/archetype"
                  },
                  "subscriptionName": {
                    "$ref": "#/$defs/azure/subscriptionName"
                  },
                  "subscriptionId": {
                    "$ref": "#/$defs/azure/subscriptionId"
                  },
                  "parentManagementGroupId": {
                    "$ref": "#/$defs/azure/parentManagementGroupId"
                  },
                  "billingProfileDisplayName": {
                    "$ref": "#/$defs/azure/billingProfileDisplayName"
                  },
                  "invoiceSectionDisplayName": {
                    "$ref": "#/$defs/azure/invoiceSectionDisplayName"
                  }
                }
              },
              {
                "required": [
                  "archetype",
                  "subscriptionName",
                  "parentManagementGroupId",
                  "billingScope"
                ],
                "additionalProperties": false,
                "properties": {
                  "decommissioned": {
                    "$ref": "#/$defs/azure/decommissioned"
                  },
                  "archetype": {
                    "$ref": "#/$defs/azure/archetype"
                  },
                  "subscriptionName": {
                    "$ref": "#/$defs/azure/subscriptionName"
                  },
                  "subscriptionId": {
                    "$ref": "#/$defs/azure/subscriptionId"
                  },
                  "parentManagementGroupId": {
                    "$ref": "#/$defs/azure/parentManagementGroupId"
                  },
                  "billingScope": {
                    "$ref": "#/$defs/azure/billingScope"
                  }
                }
              },
              {
                "required": [
                  "archetype",
                  "subscriptionName",
                  "parentManagementGroupId",
                  "subscriptionId"
                ],
                "additionalProperties": false,
                "properties": {
                  "decommissioned": {
                    "$ref": "#/$defs/azure/decommissioned"
                  },
                  "archetype": {
                    "$ref": "#/$defs/azure/archetype"
                  },
                  "subscriptionName": {
                    "$ref": "#/$defs/azure/subscriptionName"
                  },
                  "subscriptionId": {
                    "$ref": "#/$defs/azure/subscriptionId"
                  },
                  "parentManagementGroupId": {
                    "$ref": "#/$defs/azure/parentManagementGroupId"
                  }
                }
              }
            ]
          }
        }
      }
    }
  },
  "$defs": {
    "azure": {
      "decommissioned": {
        "type": "boolean",
        "description": "Setting this to true will decommission the Azure subscription."
      },
      "archetype": {
        "type": "string",
        "description": "The archetype for the Landing Zone. Typically 'corp' or 'online'."
      },
      "subscriptionName": {
        "type": "string",
        "description": "The display name for the Landing Zone.\nMust start with a letter and can contain letters, numbers, hyphens, and underscores.\nMinimum length: 1, Maximum length: 50",
        "minLength": 1,
        "maxLength": 50,
        "pattern": "^[A-Za-z][A-Za-z0-9-_]*$"
      },
      "subscriptionId": {
        "type": "string",
        "description": "The subscription id for the subscription. Must be a GUID.",
        "pattern": "^[0-9a-fA-F]{8}-[0-9a-fA-F]{4}-[1-5][0-9a-fA-F]{3}-[89ABab][0-9a-fA-F]{3}-[0-9a-fA-F]{12}$"
      },
      "parentManagementGroupId": {
        "type": "string",
        "description": "The Management Group Id for the parent Management Group.\nMust start and end with a letter, number, or closing parenthesis. Can contain letters, numbers, hyphens, underscores, periods, and parentheses in between.\nMinimum length: 1, Maximum length: 90",
        "minLength": 1,
        "maxLength": 90,
        "pattern": "^[A-Za-z0-9][A-Za-z0-9-_().]*[A-Za-z0-9)]$"
      },
      "billingScope": {
        "type": "string",
        "description": "The Billing Scope resource id for the subscription. Must be a valid billing scope in one of the formats below:\n/providers/Microsoft.Billing/enrollmentAccounts/{enrollmentAccountId}\n/providers/Microsoft.Billing/departments/{departmentId}\n/providers/Microsoft.Billing/accounts/{accountId}\n/subscriptions/{subscriptionGuid}\n/providers/Microsoft.Billing/billingAccounts/{billingAccountId}\n/providers/Microsoft.Billing/billingAccounts/{billingAccountId}/billingProfiles/{billingProfileId}\n/providers/Microsoft.Billing/billingAccounts/{billingAccountId}/billingProfiles/{billingProfileId}/invoiceSections/{invoiceSectionId}\n/providers/Microsoft.Billing/billingAccounts/{billingAccountId}/customers/{customerId}",
        "oneOf": [
          {
            "pattern": "^/providers/Microsoft\\.Billing/(enrollmentAccounts|departments|accounts)/[a-zA-Z0-9]+$|^/subscriptions/[0-9a-fA-F-]{36}$"
          },
          {
            "pattern": "^/providers/Microsoft\\.Billing/billingAccounts/[a-zA-Z0-9-]+(/billingProfiles/[a-zA-Z0-9-]+(/invoiceSections/[a-zA-Z0-9-]+)?)?$|^/subscriptions/[0-9a-fA-F-]{36}$"
          },
          {
            "pattern": "^/providers/Microsoft\\.Billing/billingAccounts/[a-zA-Z0-9-]+(/customers/[a-zA-Z0-9-]+)?$|^/subscriptions/[0-9a-fA-F-]{36}$"
          }
        ]
      },
      "billingProfileDisplayName": {
        "type": "string",
        "description": "The name of the Billing Profile for the subscription."
      },
      "invoiceSectionDisplayName": {
        "type": "string",
        "description": "The name of the Invoice Section for the subscription."
      }
    },
    "repoSource": {
      "type": "object",
      "description": "Properties related to the 'update-landing-zone-repositories' feature.",
      "oneOf": [
        {
          "required": [
            "source"
          ],
          "additionalProperties": false,
          "properties": {
            "source": {
              "type": "string",
              "description": "The name of the directory below the 'repo-sources-path' directory. If this is specified, it will take presedence over the 'repoTemplate' property as the source of the sync."
            },
            "disable": {
              "const": false,
              "description": "Setting this to 'true' disables the 'update-landing-zone-repositories' feature for this Landing Zone."
            }
          }
        },
        {
          "required": [
            "disable"
          ],
          "additionalProperties": false,
          "properties": {
            "source": {
              "type": "string",
              "description": "The name of the directory below the 'repo-sources-path' directory. If this is specified, it will take presedence over the 'repoTemplate' property as the source of the sync."
            },
            "disable": {
              "const": true,
              "description": "Setting this to 'true' disables the 'update-landing-zone-repositories' feature for this Landing Zone."
            }
          }
        }
      ]
    }
  }
}